<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.android.studydemo.combinationView.CombinationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="java版" />

    <dev.android.studydemo.combinationView.java.QuantityControlView
        android:id="@+id/qcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kt版" />

    <dev.android.studydemo.combinationView.kt.KtQuantityControlView
        android:id="@+id/kt_qcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
